      </view>
   </variant>

   <!--
   ///
   Gamelist View: Carousel Variants
   ///
   -->
   <variant name="
      gamelist-carousel
      ">
      <view name="gamelist">
         <text name="system-name,custom-collection-name">
            <pos>0.0625 0.064814814814815</pos><!-- 90 70 -->
            <size>0.875 0</size><!-- 1260 - -->
