<!--
16:9 resolution: 
based on 1920x1080
-->
<theme>

   <!--
   ///
   All Views
   ///
   -->
   <view name="system,gamelist">
      <helpsystem name="system-help,gamelist-help">
         <fontSize>${helpSystemFontSize}</fontSize>
         <entrySpacing>0.015625</entrySpacing><!-- 30 -->
      </helpsystem>
   </view>
   <fontSize name="medium">
      <variables>
         <helpSystemFontSize>0.033333333333333</helpSystemFontSize><!-- 36 -->
         <helpSystemViewEntries>start,a,left/right</helpSystemViewEntries>
         <helpGamelistViewEntries>back,a,x</helpGamelistViewEntries>
      </variables>
   </fontSize>
   <fontSize name="large">
      <variables>
         <helpSystemFontSize>0.040740740740741</helpSystemFontSize><!-- 44 -->
         <helpSystemViewEntries>start,a,left/right</helpSystemViewEntries>
         <helpGamelistViewEntries>back,a</helpGamelistViewEntries>
      </variables>
   </fontSize>

   <!--
   ///
   System View
   ///
   -->
   <view name="system">
      <image name="system-metadata-background">
         <size>0.40104167 1</size><!-- 770 100% -->
      </image>
      <text name="system-label">
         <pos>0.046875 0.08333333</pos><!-- 90 90 -->
         <size>0.30729167 0.03148148</size><!-- 590 34 -->
         <fontSize>0.03148148</fontSize><!-- 34 -->
         <visible>true</visible>
      </text>
      <text name="system-name">
         <pos>0.046875 0.125</pos><!-- 90 135 -->
         <size>0.30729167 0.2</size><!-- 590 -->
         <fontSize>${systemSystemNameFontSize}</fontSize>
      </text>
      <text name="system-description">
         <pos>0.046875 0.49074074</pos><!-- 90 530 -->
         <size>0.30729167 0.2037037</size><!-- 590 220 -->
         <fontSize>${systemSystemDescriptionFontSize}</fontSize>
         <lineSpacing>${systemSystemDescriptionLineSpacing}</lineSpacing>
         <containerVerticalSnap>false</containerVerticalSnap>
         <visible>true</visible>
      </text>
      <text name="system-game-count">
         <pos>0.046875 0.77407407</pos><!-- 90 836 -->
         <size>0.30729167 ${systemGameCountFontSize}</size><!-- 590 36 -->
         <fontSize>${systemGameCountFontSize}</fontSize>
         <lineSpacing>1</lineSpacing>
         <visible>true</visible>
      </text>
      <helpsystem name="system-help">
         <pos>0.046875 0.89814815</pos><!-- 90 970 -->
         <entries>${helpSystemViewEntries}</entries>
      </helpsystem>
      <carousel name="system-carousel">
         <pos>0.70052083 0.5</pos><!-- 1345 50% -->
         <size>0.59895833 1</size><!-- 1150 100% -->
      </carousel>
   </view>
   <fontSize name="medium">
      <variables>
         <systemSystemNameFontSize>0.055555555555556</systemSystemNameFontSize><!-- 60 -->
         <systemSystemDescriptionFontSize>0.03888889</systemSystemDescriptionFontSize><!-- 42 -->
         <systemSystemDescriptionLineSpacing>1.3</systemSystemDescriptionLineSpacing>
         <systemGameCountFontSize>0.03333333</systemGameCountFontSize><!-- 36 -->
      </variables>
   </fontSize>
   <fontSize name="large">
      <variables>
         <systemSystemNameFontSize>0.062962962962963</systemSystemNameFontSize><!-- 68 -->
         <systemSystemDescriptionFontSize>0.04259259</systemSystemDescriptionFontSize><!-- 46 -->
         <systemSystemDescriptionLineSpacing>1.13</systemSystemDescriptionLineSpacing>
         <systemGameCountFontSize>0.03333333</systemGameCountFontSize><!-- 36 -->
      </variables>
   </fontSize>

   <!--
   ///
   Gamelist View - List Variants
   ///
   -->
   <variant name="
      gamelist-list-cover,
      gamelist-list-screenshot,
      gamelist-list-screenshot-marquee,
      gamelist-list-titlescreen,
      gamelist-list-physicalmedia,
      gamelist-list-miximage,
      gamelist-list-metadata-screenshot-cover,
      gamelist-list-metadata-screenshot-marquee,
      gamelist-list-metadata-screenshot-physicalmedia,
      ">
      <view name="gamelist">
         <image name="gamelist-background">
            <size>0.40104167 1</size><!-- 770 100% -->
         </image>
         <text name="system-name,custom-collection-name">
            <pos>0.046875 0.07407407</pos><!-- 90 80 -->
            <size>0.246875 0.09259259</size><!-- 474 100 -->
            <fontSize>${gamelistSystemNameFontSize}</fontSize>
         </text>
         <textlist name="gamelist-textlist">
            <pos>0.046875 0.212962962962963</pos><!-- 90 230 -->
            <size>0.30729167 0.62037037</size><!-- 590 670 -->
            <fontSize>${gamelistFontSize}</fontSize>
            <lineSpacing>${gamelistLineSpacing}</lineSpacing>
            <selectedBackgroundMargins>0.01145833 0.01145833</selectedBackgroundMargins><!-- 22 22 -->
         </textlist>
         <helpsystem name="gamelist-help">
            <pos>0.046875 0.89814815</pos><!-- 90 970 -->
            <entries>${helpGamelistViewEntries}</entries>
         </helpsystem>
      </view>
   </variant>
   <fontSize name="medium">
      <variables>
         <gamelistSystemNameFontSize>0.04074074</gamelistSystemNameFontSize><!-- 44 -->
         <gamelistFontSize>0.033333333333333</gamelistFontSize><!-- 36 -->
         <gamelistLineSpacing>1.69191919</gamelistLineSpacing><!-- 670/36/11 -->
      </variables>
   </fontSize>
   <fontSize name="large">
      <variables>
         <gamelistSystemNameFontSize>0.04259259</gamelistSystemNameFontSize><!-- 46 -->
         <gamelistFontSize>0.04074074</gamelistFontSize><!-- 44 -->
         <gamelistLineSpacing>1.69191919</gamelistLineSpacing><!-- 670/44/9 -->
      </variables>
   </fontSize>
   <!-- Gamelist View - List Variants without Metadata -->
   <variant name="
      gamelist-list-cover,
      gamelist-list-screenshot,
      gamelist-list-screenshot-marquee,
      gamelist-list-titlescreen,
      gamelist-list-physicalmedia,
      gamelist-list-miximage,
      ">
      <view name="gamelist">
         <video name="game-video">
            <pos>0.70052083 0.5</pos><!-- 1345 50% -->
            <cropSize>0.6 1</cropSize><!-- 1150 100% -->
         </video>
      </view>
   </variant>
   <variant name="
      gamelist-list-cover,
      gamelist-list-physicalmedia,
      ">
      <view name="gamelist">
         <video name="game-video">
            <imageMaxSize>0.41666667 0.74074074</imageMaxSize><!-- 800 800 -->
         </video>
      </view>
   </variant>
   <variant name="
      gamelist-list-screenshot-marquee,
      ">
      <view name="gamelist">
         <image name="game-art">
            <pos>0.70052083 0.5</pos><!-- 1345 50% -->
            <maxSize>0.3125 0.55555556</maxSize><!-- 600 600 -->
         </image>
      </view>
   </variant>
   <variant name="
      gamelist-list-titlescreen,
      ">
      <view name="gamelist">
         <video name="game-video">
            <imageMaxSize>0.46875 0.83333333</imageMaxSize><!-- 900 900 -->
         </video>
      </view>
   </variant>
   <variant name="
      gamelist-list-miximage,
      ">
      <view name="gamelist">
         <video name="game-video">
            <imageMaxSize>0.52083333 0.83333333</imageMaxSize><!-- 1000 900 -->
         </video>
      </view>
   </variant>
   <!-- Gamelist View - List Variants with Metadata -->
   <variant name="
      gamelist-list-metadata-screenshot-cover,
      gamelist-list-metadata-screenshot-marquee,
      gamelist-list-metadata-screenshot-physicalmedia,
      ">
      <view name="gamelist">
         <image name="game-video-background">
            <pos>0.70052083 0.33333333</pos><!-- 1345 360 -->
            <size>0.6 0.66666667</size><!-- 1150 720 -->
         </image>
         <video name="game-video">
            <pos>0.70052083 0.33333333</pos><!-- 1345 360 -->
            <cropSize>0.6 0.66666667</cropSize><!-- 1150 720 -->
         </video>
         <image name="game-art">
            <pos>0.44270833 0.73611111</pos><!-- 850 795 -->
            <maxSize>0.20833333 0.33333333</maxSize><!-- 400 360 -->
         </image>
         <image name="game-description-background">
            <pos>0.40104167 0.66666667</pos><!-- 770 720 -->
            <size>0.6 0.33333333</size><!-- 1150 360 -->
            <visible>true</visible>
         </image>
         <text name="game-description">
            <pos>0.43229167 0.76851852</pos><!-- 830 830 -->
            <size>0.36458333 0.18518519</size><!-- 700 200 -->
            <fontSize>${gamelistDescriptionFontSize}</fontSize>
            <lineSpacing>${gamelistDescriptionLineSpacing}</lineSpacing>
            <visible>true</visible>
         </text>
         <image name="game-metadata-background,game-metadata-background-shade">
            <pos>0.84114583 0.56481481</pos><!-- 1615 610 -->
            <size>0.13541667 0.39351852</size><!-- 260 425 -->
            <visible>true</visible>
         </image>
         <text name="game-released-label,game-players-label,game-last-played-label,game-times-played-label">
            <origin>0.5 1</origin>
            <size>0.1125 ${gamelistMetadataFontSize}</size><!-- 216 -->
            <fontSize>${gamelistMetadataFontSize}</fontSize>
            <visible>true</visible>
         </text>
         <text name="game-players,game-times-played">
            <origin>0.5 0</origin>
            <size>0.1125 ${gamelistMetadataFontSize}</size><!-- 216 -->
            <fontSize>${gamelistMetadataFontSize}</fontSize>
            <visible>true</visible>
         </text>
         <datetime name="game-released,game-last-played">
            <origin>0.5 0</origin>
            <size>0.1125 ${gamelistMetadataFontSize}</size><!-- 216 -->
            <fontSize>${gamelistMetadataFontSize}</fontSize>
            <visible>true</visible>
         </datetime>
         <rating name="game-rating">
            <origin>0.5 0.5</origin>
            <pos>0.90885417 0.60555556</pos><!-- 1745 654 -->
            <size>0 ${gamelistMetadataRatingSize}</size>
            <visible>true</visible>
         </rating>
         <text name="game-released-label">
            <pos>0.90885417 0.66759259</pos><!-- 1745 721 -->
         </text>
         <datetime name="game-released">
            <pos>0.90885417 0.67592593</pos><!-- 1745 730 -->
         </datetime>
         <text name="game-players-label">
            <pos>0.90885417 0.7462963</pos><!-- 1745 806 -->
         </text>
         <text name="game-players">
            <pos>0.90885417 0.75462963</pos><!-- 1745 815 -->
         </text>
         <text name="game-last-played-label">
            <pos>0.90885417 0.825</pos><!-- 1745 891 -->
         </text>
         <datetime name="game-last-played">
            <pos>0.90885417 0.83333333</pos><!-- 1745 900 -->
         </datetime>
         <text name="game-times-played-label">
            <pos>0.90885417 0.9037037</pos><!-- 1745 976 -->
         </text>
         <text name="game-times-played">
            <pos>0.90885417 0.91203704</pos><!-- 1745 985 -->
         </text>
      </view>
      <fontSize name="medium">
         <variables>
            <gamelistDescriptionFontSize>0.033333333333333</gamelistDescriptionFontSize><!-- 36 -->
            <gamelistDescriptionLineSpacing>1.38888889</gamelistDescriptionLineSpacing><!-- 200/36/4 -->
            <gamelistMetadataRatingSize>0.02592593</gamelistMetadataRatingSize><!-- 28 -->
            <gamelistMetadataFontSize>0.024074074074074</gamelistMetadataFontSize><!-- 26 -->
         </variables>
      </fontSize>
      <fontSize name="large">
         <variables>
            <gamelistDescriptionFontSize>0.03888889</gamelistDescriptionFontSize><!-- 44 -->
            <gamelistDescriptionLineSpacing>1.58730159</gamelistDescriptionLineSpacing><!-- 200/42/3 -->
            <gamelistMetadataRatingSize>0.02777778</gamelistMetadataRatingSize><!-- 30 -->
            <gamelistMetadataFontSize>0.02592593</gamelistMetadataFontSize><!-- 28 -->
         </variables>
      </fontSize>
   </variant>

</theme>