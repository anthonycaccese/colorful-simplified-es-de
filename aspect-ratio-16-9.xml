            <size>0.40104167 1</size><!-- 770 100% -->
         </image>
         <text name="system-name,custom-collection-name">
            <pos>0.046875 0.08796296</pos><!-- 90 95 -->
            <size>0.24479167 0.09259259</size><!-- 468 100 -->
