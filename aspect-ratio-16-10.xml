      </view>
   </variant>
   <variant name="
      gamelist-list-cover,
      gamelist-list-physicalmedia,
      ">
      <view name="
         gamelist
         ">
         <video name="
            game-video
            ">
            <imageMaxSize>0.41666667 0.74074074</imageMaxSize><!-- 720 800 -->
